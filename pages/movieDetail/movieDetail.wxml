<scroll-view scroll-y="true" bindscrolltoupper="pullDownRefresh">
    <view class="detail-background">
        <image  class="cover" src="{{movie.cover}}" mode="aspectFill" style="border:1px solid #FFFFFF"></image>
            <view style="flex-direction:row;">
                <view class="name" > {{movie.name}}</view>
                <view class="score"> {{movie.score}}</view>
                <view class="style"> {{movie.style}}</view>                
            </view>   
    </view>
    <view class="summary">
        <text >{{summary}}</text>    
    </view>
    <view>
        <scroll-view class="scroll-view_H" scroll-x="true" style="width: 100%">
            <view id="green" class="scroll-view-item_H bc_green"></view>
            <view id="red"  class="scroll-view-item_H bc_red"></view>
            <view id="yellow" class="scroll-view-item_H bc_yellow"></view>
            <view id="blue" class="scroll-view-item_H bc_blue"></view>
        </scroll-view>
    </view>
   
    
 

</scroll-view>



  

    
